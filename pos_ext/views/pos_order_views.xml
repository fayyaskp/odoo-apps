<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_pos_pos_form" model="ir.ui.view">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lines']" position="after">
                    <group class="oe_left">
        				<field name="total_qty"/>
       				</group>
                </xpath>
                <xpath expr="//field[@name='lines']/tree/field[@name='qty'] " position="after"> 
                	<field name="product_uom"/>
                </xpath>
                <button name='refund' position='replace'> 
                	<button name="refund" string="Return Products" type="object"
                        attrs="{'invisible':[('state','in',['draft','quotation'])]}"/>
                </button>
                <field name="pos_reference" position='after'>
                	<field name='so_id'/>
                </field>
            </field>
        </record>
        
        <record id="view_pos_order_tree" model="ir.ui.view">
        <field name="name">pos.order.tree</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml"> 
        	<field name="company_id" position='after'>
                	<field name='so_id' string='SO'/>
                </field>
         	</field>
        </record>
</odoo>