<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve" inherit_id="point_of_sale.template">
	 <t t-extend="Product">
			<t t-jquery="div.product-img" t-operation="append">
				<span class="stock-tag" id="stock_label">
					<t t-esc="widget.pos.stock[product.id]+ ' - ' +widget.pos.units_by_id[product.uom_id[0]].name"/>
	            </span>
			</t>
   </t>
   	 
	 <t t-extend="PaymentScreenWidget">
	 	<t t-jquery="div.top-content" t-operation="append">
	 		 <span class='button order_only'>
            Order
            <i class='fa fa-angle-double-right'></i>
        </span>
	 	</t>
	 </t>
   
    <t t-extend="Orderline">
         <t t-jquery="ul.info-list" t-operation="replace">

            <ul class="info-list">
                <t t-if="line.get_quantity_str() !== '1' || line.selected ">
                    <li class="info">
                        <em>
                            <t t-esc="line.get_quantity_str()" />
                        </em>
                        <t t-esc="line.get_uomStr()" />
                        at
                        <t t-esc="widget.format_currency(line.get_unit_display_price(),'Product Price')" />
                        /
                        <t t-esc="line.get_uomStr()" />
                    </li>
                </t>
                <t t-if="line.get_discount_str() !== '0'">
                    <li class="info">
                        With a 
                        <em>
                            <t t-esc="line.get_discount_str()" />%
                        </em>
                        discount
                    </li>
                </t>
            </ul>

         </t>
    </t>
    
</template>








